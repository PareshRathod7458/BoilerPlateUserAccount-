<html lang="en">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
    <div class="container">
        <div class="table-wrapper">
				<form action="/api/portfolio" method="POST" enctype="multipart/form-data">
                    <a href="/portfolio"><i class="fa fa-arrow-left fa-2x"></i></a>
					<div class="modal-header">						
						<h4 class="modal-title">Add Portfolio</h4>
					</div>
					<div class="modal-body">					
						<div class="form-group">
							<label>Project Category</label>

                            <select name="pcategory">
                                <option value="">--select Category--</option>
                                <% values.forEach(data => { %>
                                    <option value="<%= data._id %>">
                                        <%= data.category %>
                                    </option>
                                    <% }); %>
                            </select>
						</div>	
                        <% if (typeof error1 !=='undefined' && error1.length> 0) { %>
                            <div style="color: red;">
                              <%= error1 %>
                            </div>
                            <% } %>				
					</div>
                    <div class="modal-body">					
						<div class="form-group">
							<label>Project Name</label>
							<input type="text" name="pname" class="form-control" value="<%= values.pname %>">
						</div>
                        <% if (typeof error2 !=='undefined' && error2.length> 0) { %>
                            <div style="color: red;">
                              <%= error2 %>
                            </div>
                            <% } %>					
					</div>
                    <div class="modal-body">					
						<label for="image" class="form-label">Project Image</label>
                        <input class="form-control" type="file" id="formFileMultiple" name="uploadImage" multiple/>					
					</div>
                    <div class="modal-body">					
						<div class="form-group">
							<label>Project Title</label>
							<input type="text" name="ptitle" class="form-control" value="<%= values.ptitle %>">
						</div>
                        <% if (typeof error3 !=='undefined' && error3.length> 0) { %>
                            <div style="color: red;">
                              <%= error3 %>
                            </div>
                            <% } %>					
					</div>
                    <div class="modal-body">					
						<div class="form-group">
							<label>Project Website URL</label>
							<input type="text" name="url" class="form-control" value="<%= values.url %>">
						</div>
                        <% if (typeof error4 !=='undefined' && error4.length> 0) { %>
                            <div style="color: red;">
                              <%= error4 %>
                            </div>
                            <% } %>					
					</div>
                    <div class="modal-body">					
						<div class="form-group">
							<label>Project Date</label>
							<input type="date" name="pdate" class="form-control" value="<%= values.pdate %>">
						</div>
                        <% if (typeof error5 !=='undefined' && error5.length> 0) { %>
                            <div style="color: red;">
                              <%= error5 %>
                            </div>
                            <% } %>				
					</div>

					<div class="modal-footer">
						<input type="submit" class="btn btn-success" value="Add">
					</div>
				</form>
		</div>
	</div>
</body>
</html>