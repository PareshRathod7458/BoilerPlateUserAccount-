<html lang="en">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>Contact</title>
<style type="text/css">
    body {
        
  background: #f5f5f5;
  font-family: 'Varela Round', sans-serif;
  font-size: 13px;
 }
</style>
</head>
<body>
    <div class="container"><br>
        <a href="/index"><i class="fa fa-arrow-left fa-2x"></i></a>
        <div>
            <div>
                <div>
                    <div>
      <h2>Manage <b>Contact</b></h2>
     </div>
     <div>
      <a href="/addContact" class="btn btn-success" data-toggle="modal"><span>Add New</span></a>   
     </div>
                </div>
            </div>
        <form action="/api/contact/delete" method="get">
            <table class="table table-striped table-hover">
                <thead>
                   
                    <tr>
                        <th>Select</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Contact Number</th>
                        <th>Message</th>
                        <th>Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i=0; i < users.length; i++) { %> 
                    <tr>
                        </td>
                            <td><input type="checkbox" name="<%= users[i]._id%>"></td>
                            <td><%= users[i].name %></td>
                            <td><%= users[i].email %></td>
                            <td><%= users[i].contactnumber %></td>
                            <td><%= users[i].message %></td>
                            <td><%= users[i].date.toLocaleDateString() %></td>&nbsp;&nbsp;
                        <td>
                            <a href="/editContact/<%= users[i]._id %>" class="edit" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Edit">EDIT</i></a>&nbsp;&nbsp;
                            <a href="/api/contact/delete/<%= users[i]._id %>" class="delete" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Delete">delete</i></a>
                        </td>
                    </tr>
                    <%}%>
                </tbody>
            </table>
            <input type="submit" class="btn btn-danger" value="Delete All">
        </form>
        </div>
    </div>
</body>
</html>               