<!doctype html>
<html lang="en">

<head>
    <title>Update Profile</title>
    <style>
        body {
            background-color: #f1f1f1 !important;
        }

        .form-holder {
            margin-top: 20%;
            margin-bottom: 20%;
        }
    </style>
</head>

<body>
    <div>
        <div>
            <div></div>
            <div>
                <div>
                    <div>
                        <h3 style="text-align: center;">Update Profile</h3>
                        <% if (typeof error !=='undefined' && error.length> 0) { %>

                            <div class="alert alert-warning"
                                style="text-align: center; font-size: 17px!important; border-radius: 0%;">
                                <%= error %> &nbsp; &nbsp; &nbsp;<a href="/editprofile" style="color:#3d9970">&#10006;</a>
                            </div>

                            <% } %>
                            <form action="/editprofile" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    
                                    <label><b>Name</b></label>
                                    <input type="text" name="name" class="form-control" placeholder="Username" value="<%= user.name%>" />
                                    <% if (typeof error1 !=='undefined' && error1.length> 0) { %>
                                        <div style="color: red;">
                                            <%= error1 %>
                                        </div>
                                     <% } %>
                                </div>
                                <div class="form-group">
                                    <label><b>Email</b></label>
                                    <input type="text" name="email" class="form-control" placeholder="Email" value="<%= user.email%>" />
                                    <% if (typeof error2 !=='undefined' && error2.length> 0) { %>
                                        <div style="color: red;">
                                            <%= error2 %>
                                        </div>
                                    <% } %>
                                </div>
                                <div class="form-group">
                                    
                                    <label name="gen" id="gender"><b>Gender</b>&nbsp;</label>
                                    <input type="radio" id="gender" name="gen" value="Male"  <%= user.gen ? 'checked' :'' %>>&nbsp;Male
                                    <input class="ml-4" type="radio" id="gender" name="gen"  value="Female" <%= user.gen ? 'checked' :'' %>>&nbsp;Female
                                    <% if (typeof error3 !=='undefined' && error3.length> 0) { %>
                                        <div style="color: red;">
                                            <%= error3 %>
                                        </div>
                                     <% } %>
                                </div>

                                <div class="form-group">
                                    <label><b>Phone No</b></label>
                                    <input type="text" name="phoneno" class="form-control" placeholder="Phone No" value="<%= user.phoneno %>"/>
                                    <% if (typeof error4 !=='undefined' && error4.length> 0) { %>
                                        <div style="color: red;">
                                            <%= error4 %>
                                        </div>
                                     <% } %>
                                </div>
                                <div class="form-group">
                                        <label for="image" name="image" class="form-label">Upload Image</label>
                                        <input class="form-control" type="file" id="formFileMultiple" name="uploadImage" />
                                        <img src="/<%= user.uploadImage %>" width="100"  class="img-thumbnail mt-1">
                                        <% if (typeof error5 !=='undefined' && error5.length> 0)
                                            { %>
                                            <div style="color: red;">
                                                <%= error5 %>
                                            </div>
                                            <% } %>
                                    <input type="hidden" name="old_image" value="<%= user.uploadImage %>">
                                </div>
                               
                                <div class="form-group">
                                    <label><b>City</b></label><br />
                                        <select name="city" id="city" value="">
                                            <option value="">--select city--</option>
                                            <option value="navsari" <%= user.city=="navsari" ? 'selected' :'' %>>Navsari</option>
                                            <option value="surat" <%= user.city=="surat" ? 'selected' :'' %>>Surat</option>
                                            <option value="ahmedabad" <%= user.city=="ahmedabad" ? 'selected' :'' %>>Ahmedabad</option>
                                        </select>
                                        <% if (typeof error6 !=='undefined' && error6.length> 0) { %>
                                            <div style="color: red;">
                                                <%= error6 %>
                                            </div>
                                        <% } %>
                                </div>
                                <div class="row">
                                    <div>
                                        <input type="submit" value="Update" />
                                        <a href="/profile">Cancel</a>

                                    </div>
                                </div>
                            </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>