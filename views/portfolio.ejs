<body>
    <div class="container"><br>
        <a href="/index"><i class="fa fa-arrow-left fa-2x"></i></a>
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2>Manage <b>Portfolio</b></h2>
                    </div>
                    <div class="col-sm-6">
                        <a href="/addPortfolio" class="btn btn-success" data-toggle="modal"><i
                                class="material-icons">&#xE147;</i> <span>Add New</span></a>
                    </div>
                </div>
            </div>
             <form action="/api/portfolio/delete" method="get">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Project Category</th>
                        <th>Project Name</th>
                        <th>Project Image</th>
                        <th>Project Title</th>
                        <th>Project Website URL</th>
                        <th>Project Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i < values.length; i++) { %>
                        <tr class="align-middle">
                            <td><input type="checkbox" name="<%= values[i]._id%>"></td>
                            <td>
                            <td>

                                <% values[i].data.forEach((d)=>{%>
                                    <% if(d._id==values[i].pcategory ){%>
                                        <%= d.category%>
                                            <%}%>
                                                <%})%>


                            </td>
                            <td>
                                <%= values[i].pname %>
                            </td>
                            <td>
                                <% values[i].uploadImage.forEach(function(image) { %>
                                    <img src="<%= image %>" width="50" class="img-thumbnail" />
                                    <% }) %>
                            </td>
                            <td>
                                <%= values[i].ptitle %>
                            </td>
                            <td>
                                <%= values[i].url %>
                            </td>
                            <td>
                                <%= values[i].pdate.toLocaleDateString() %>
                            </td>
                            <td>
                                <a href="/editPortfolio/<%= values[i]._id %>" class="edit" data-toggle="modal"><i
                                        class="material-icons" data-toggle="tooltip" title="Edit">Edit</i></a>
                                <a href="/api/portfolio/delete/<%= values[i]._id %>" class="delete" data-toggle="modal"><i
                                        class="material-icons" data-toggle="tooltip" title="Delete">Delete</i></a>
                            </td>
                        </tr>
