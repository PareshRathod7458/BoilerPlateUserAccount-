<!doctype html>
<html lang="en">

<head>
  <title>Reset Password</title>
  <style>
    body {
      background-color: #f1f1f1 !important;
    }

    .form-holder {
      margin-top: 20%;
      margin-bottom: 20%;
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="row">

      <div>
        <div>
          <div>
            <h3>Update Password</h3>
            <hr>
            <% if (typeof error !=='undefined' && error.length> 0) { %>
              <div class="container">
                  <div class="alert alert-warning" style="text-align: center;">
                      <%= error %> &nbsp; &nbsp; &nbsp;<a href="/resetPassword" style="color:#8a6d3b;">&#10006;</a>
                  </div>
              </div>
              <% } %>
              <div class="container">
                  <div style="text-align: center;">
                     &nbsp; &nbsp; &nbsp;<a href="/resetPassword" style="color:#151215;"></a>
                  </div>
              </div>
             
            <form action="/newPassword" method="post">
              <div class="form-group">
                <label>Current Password</label>
                <input type="password" name="currentpassword"  placeholder="Current Password" />
                <% if (typeof error1 !=='undefined' && error1.length> 0) { %>
                  <div style="color: red;">
                    <%= error1 %>
                  </div>
                  <% } %>
               </div>
              <div class="form-group">
                <label>New Password</label>
                <input type="password" name="newpassword" placeholder="New Password" />
                <% if (typeof error2 !=='undefined' && error2.length> 0) { %>
                  <div style="color: red;">
                    <%= error2 %>
                  </div>
                  <% } %>
              </div>
              <div class="form-group">
                <label>Confirm Password</label>
                <input type="password" name="confirmpassword"  placeholder="Confirm Password" />
                <% if (typeof error3 !=='undefined' && error3.length> 0) { %>
                  <div style="color: red;">
                    <%= error3 %>
                  </div>
                  <% } %>
              </div>
              <div class="row">
              <div>
                <input type="submit" value="Reset Password" />
                <a href="/index" class="btn btn-danger">Cancel</a>
              </div>
            </div>
          </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  </div>
</body>
</html>