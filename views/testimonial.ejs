<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Testimonial</title>
    <style type="text/css">
        body {
            background: #f5f5f5;
            font-family: 'Varela Round', sans-serif;
            font-size: 13px;
        }
    </style>
</head>

<body>
    <div class="container"><br>
        <a href="/index"><i class="fa fa-arrow-left fa-2x"></i></a>
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2>Manage <b>Testimonial</b></h2>
                    </div>
                    <div class="col-sm-6">
                        <a href="/addTest" class="btn btn-success" data-toggle="modal"><i
                                class="material-icons">&#xE147;</i> <span>Add New</span></a>
                    </div>
                </div>
            </div>
        <form action="/api/testimonial/delete" method="get">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Select</th>
                        <th>Testimonial Name</th>
                        <th>Designation</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i< users.length; i++) { %>
                        <tr class="align-middle">
                            <td>
                            <input type="checkbox" name="<%= users[i]._id%>">
                            </td>
                            <td>
                                <%= users[i].name %>
                            </td>
                            <td>
                                <%=users[i].designation %>
                            </td>
                            <td>
                                <%=users[i].description %>
                            </td>
                            <td><img src="/<%=users[i].uploadImage %>" width="50" class="img-thumbnail" /></td>
                            <td>
                                <a href="/editTest/<%=users[i]._id %>" class="edit" data-toggle="modal"><i
                                        class="material-icons" data-toggle="tooltip" title="Edit">Edit</i></a>
                                <a href="/api/testimonial/delete/<%=users[i]._id %>" class="delete" data-toggle="modal"><i
                                        class="material-icons" data-toggle="tooltip" title="Delete">Delete</i></a>
                            </td>
                        </tr>
                        
                        <%}%>
                </tbody>
            </table>
            <input type="submit" class="btn btn-danger" value="Delete All">
        </form>
            
        </div>
    </div>
</body>

</html>